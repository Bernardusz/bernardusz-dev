---
import FlexSection from '@/components/shared/flexSection.astro';
import GridSection from '@/components/shared/gridSection.astro';
import TitleParagraph from '@/components/shared/TitleParagraph.astro';
interface Props {
	title: string;
    paragraph?: string;
    class?: string;
    centeredTitle?: boolean;
    flexOrGrid?: "flex" | "grid";
    sectionClassname?: string;
    noPadding?: boolean;
}

const { title, paragraph,  class:className, centeredTitle, flexOrGrid, sectionClassname, noPadding } = Astro.props
---
<section
            class={`${noPadding ? "max-w-400 py-12 md:py-16 relative w-full" : "section"} flex flex-col w-full gap-4 ${sectionClassname}`}
        >
            {paragraph ? (
                <TitleParagraph
                    variant="h2"
                    title={title}
                    text={paragraph}
                    class:list={[
                        {"pl-8 md:pl-12": noPadding,}
                    ]}
                />
            ) : (
                <h2
                    class={`${centeredTitle && "text-center"} ${noPadding ? "pl-8 md:px-12" : ""}`}
                >
                    {title}
                </h2>
            )}
            {flexOrGrid ? (
                flexOrGrid === "grid" ? (
                    <GridSection class={className}><slot/></GridSection>
                ) : (
                    <FlexSection class={className}><slot/></FlexSection>
                )
            ) : (
                <div class={className}><slot/></div>
            )}
        </section>

