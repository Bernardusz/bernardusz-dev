---
interface Props {
  class?: string;
  breakpoint?: "sm" | "md" | "xl" | "2xl"
}

const { class: className, breakpoint } = Astro.props;
---

<section
  class:list={[
    "grid min-h-60 w-full grid-cols-1 justify-between gap-6 md:gap-12 xl:gap-8",
    className,
    breakpoint === "sm" ? "sm:grid-cols-2" : "",
    breakpoint === "md" ? "md:grid-cols-2" : "",
    breakpoint === "xl" ? "xl:grid-cols-2" : "",  
    breakpoint === "2xl" ? "2xl:grid-cols-2" : "",
  ]}
>
  <slot />
</section>
