---
interface Props {
  title: string;
  text: string;
  variant?: "h1" | "h2" | "h3" | "h4";
  class?: string;
  link?: string;
  linkText?: string;
  white?: boolean;
}

const {
  title,
  text,
  white,
  linkText,
  link,
  variant = "h3",
  class: className,
} = Astro.props;
const Tag = variant;
---

<div class:list={["flex flex-col justify-items-start gap-2", className]}>
  <Tag class:list={[{ "text-soft-white": white }]}>{title}</Tag>
  <p class:list={[{ "text-soft-white": white }]} set:html={text} />
  {
    link && linkText && (
      <a class="link-primary" href={link}>
        {linkText}
      </a>
    )
  }
</div>
